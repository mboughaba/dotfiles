# Use 256 colors
term screen-256color

# Status bar
hardstatus off

hardstatus alwayslastline "%{= Mw}  %{w}%S  %{GG}%{Cw} %{+b bW} #%n-%t%? [%h]%? %{GG} %{= mG} %{d}$LOGNAME@%H %{G}%{Kw} %{BG}%{= kG}%= %{= G}%?%-Lw%?%{+ub M}%n*%f %t%?%{= k}(%u)%?%{= G}%+Lw%?%= %{= G}%{Kg} %{+b ow}  BDD %{+b rw}  C++ %{+b gw}  ViM %{+b yw}   JS %{= G}%{Yg} %{+B BW} Load: %l %{YG} %{GG} %{-B d}%D %Y-%m-%d %{W}%c:%s %{G}"

# Caption bar only on split
caption splitonly "%?%F%{+bu kM}%:%{KK} %?Active split: #%n %t %h "

# Activity
activity "%c activity -> %n%f %t"
bell "%c bell -> %n%f %t"

# Turn welcome message off
startup_message off

# Use X scrolling mechanism
termcapinfo xterm* ti@:te@

# Turn off visual bell
vbell off

# Fix for residual editor text
altscreen on

# Increase the scrollback buffer size
defscrollback 30000

# Reload screenrc
bind R eval 'source $HOME/.screenrc' 'echo "reloaded!"'

# Always start screen with utf8 enabled. (screen -U)
defutf8 on

# Shorten the time a message is displayed in seconds.
msgwait 2

# Eliminate apparent delay when entering copy mode
msgminwait 0

# detach on disconnect
autodetach on

# make search case-insensitive
ignorecase on

# Suppress trailing blank lines when scrolling up in the history buffer.
compacthist on

# Enable activity monitoring for windows.
defmonitor on

# Deal with dead terminals.
defnonblock on

# Display screen saver after some seconds of inactivity
idle 30

# Custom blanker (screen saver/blanker) program
blankerprg $HOME/.blanker/.blanker
